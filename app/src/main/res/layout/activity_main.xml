<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/material_blue_grey_800">
<EditText
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:textSize="32sp"
    android:id="@+id/edittext"
    android:background="#ff000000"
    android:textColor="#ffffff"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="85dp"
    android:inputType="text" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/button_text"
    android:textSize="32sp"
    android:id="@+id/button"
    android:background="@color/button_material_dark"
    android:layout_below="@+id/spinner1"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="71dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/bold_text"
        android:id="@+id/checkbox_bold"
        android:layout_below="@+id/edittext"
        android:layout_alignLeft="@+id/edittext"
        android:layout_alignStart="@+id/edittext"
        android:layout_marginTop="30dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="@string/italics_text"
        android:id="@+id/checkbox_italic"
        android:layout_below="@+id/checkbox_bold"
        android:layout_alignLeft="@+id/checkbox_bold"
        android:layout_alignStart="@+id/checkbox_bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:id="@+id/textView"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner1"
        android:layout_alignBottom="@+id/checkbox_italic"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

</RelativeLayout>
